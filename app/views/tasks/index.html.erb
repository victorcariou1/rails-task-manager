<h1>Liste des tâches</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to 'Supprimer', task_path(task), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cette tâche?' } %>
    </li>

  <% end %>
</ul>

<%= render 'form' %>

<%= link_to 'Nouvelle tâche', new_task_path %>
